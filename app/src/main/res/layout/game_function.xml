<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/usu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/head"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/arrow"
            android:scaleType="center"
            android:layout_margin="9dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="竞技游戏单元"
            android:textColor="@color/usu"
            android:textSize="20sp"
            android:layout_margin="7dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/user"
        android:layout_width="400dp"
        android:layout_height="58dp"
        android:layout_below="@+id/head"
        android:layout_margin="15dp"
        android:background="@color/white"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/shape"
            android:src="@drawable/ic_launcher"
            android:scaleType="fitCenter"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img"
            android:text="XXX(昵称)"
            android:textSize="20sp"
            android:layout_margin="3dp"/>

        <TextView
            android:id="@+id/account"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img"
            android:layout_below="@+id/name"
            android:text="XXX(帐号)"
            android:textSize="15sp"
            android:layout_margin="3dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/p"
            android:text="任务"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/p"
            android:text="公告"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/p"
            android:text="排行榜"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/p"
            android:text="教程"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/function"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/quick_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/pic1"
            android:text="快速进房"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/choose_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/pic1"
            android:text="定向匹配"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/create_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/p"
            android:text="创房"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/search_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/p"
            android:text="搜房"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/follow_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/p"
            android:text="跟房"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:gravity="center"/>

    </LinearLayout>
</RelativeLayout>