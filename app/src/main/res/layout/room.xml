<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/usu"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/head"
        android:background="@color/white"
        android:gravity="left">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/arrow"
            android:scaleType="center"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX房"
            android:textColor="@color/usu"
            android:textSize="20sp"
            android:layout_margin="3dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/left_user"
        android:layout_width="80dp"
        android:layout_height="400dp"
        android:layout_below="@+id/head"
        android:divider="@null">
    </ListView>

    <ListView
        android:id="@+id/right_user"
        android:layout_width="80dp"
        android:layout_height="400dp"
        android:layout_below="@+id/head"
        android:layout_alignParentRight="true"
        android:divider="@null">
    </ListView>

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/head"
        android:layout_centerHorizontal="true"
        android:background="@color/edit"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="本次重评主题：政治" />

        <TextView
            android:id="@+id/resource"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="本次重评材料：图片"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="本次重评方式：命题"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/material"
        android:layout_width="230dp"
        android:layout_height="180dp"
        android:layout_below="@+id/info"
        android:layout_centerHorizontal="true"
        android:background="@color/edit"
        android:layout_marginBottom="1dp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/usu"
        android:gravity="center"
        android:layout_below="@+id/head"
        android:layout_alignLeft="@+id/info"/>

    <ListView
    android:id="@+id/rv"
    android:layout_width="230dp"
    android:layout_height="480dp"
    android:layout_below="@+id/material"
    android:layout_centerHorizontal="true"
    android:background="@color/edit"/>

    <Button
        android:id="@+id/ready"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="准备"
        android:layout_above="@+id/edit_frame"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:id="@+id/edit_frame"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <EditText
            android:id="@+id/et"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:hint="输入内容"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/send"
            android:text="发送"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>