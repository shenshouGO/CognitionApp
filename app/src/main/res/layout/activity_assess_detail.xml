<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/head"
        android:background="@color/white"
        android:gravity="center">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text"
            android:textColor="@color/usu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="3dp"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_below="@+id/head"
        android:layout_margin="10dp"
        android:max="6" />
    
    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress"
        android:text="@string/text"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:textColor="@color/usu"/>

    <RadioGroup
        android:id="@+id/chooses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question">
        <RadioButton
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/one"
            android:textSize="25sp"
            android:textColor="@color/usu"
            android:textStyle="bold"
            android:background="@color/botton_back"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:padding="3dp"
            android:layout_margin="1dp"/>
        <RadioButton
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/two"
            android:textSize="25sp"
            android:textColor="@color/usu"
            android:textStyle="bold"
            android:background="@color/botton_back"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:padding="3dp"
            android:layout_margin="1dp"/>
        <RadioButton
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/three"
            android:textSize="25sp"
            android:textColor="@color/usu"
            android:textStyle="bold"
            android:background="@color/botton_back"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:padding="3dp"
            android:layout_margin="1dp"/>
        <RadioButton
            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/four"
            android:textSize="25sp"
            android:textColor="@color/usu"
            android:textStyle="bold"
            android:background="@color/botton_back"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:padding="3dp"
            android:layout_margin="1dp"/>
        <RadioButton
            android:id="@+id/five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/five"
            android:textSize="25sp"
            android:textColor="@color/usu"
            android:textStyle="bold"
            android:background="@color/botton_back"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:padding="3dp"
            android:layout_margin="1dp"/>
        <RadioButton
            android:id="@+id/six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/six"
            android:textSize="25sp"
            android:textColor="@color/usu"
            android:textStyle="bold"
            android:background="@color/botton_back"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:padding="3dp"
            android:layout_margin="1dp"/>
        <RadioButton
            android:id="@+id/seven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seven"
            android:textSize="25sp"
            android:textColor="@color/usu"
            android:textStyle="bold"
            android:background="@color/botton_back"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:padding="3dp"
            android:layout_margin="1dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/last"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/last"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/round_button"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"/>

    <Button
        android:id="@+id/next"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/next"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/round_button"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/submit"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/round_button"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"/>

    <RelativeLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head">
        <TextView
            android:id="@+id/result_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/assessResult"
            android:textColor="@color/usu"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/result_tip"
            android:layout_below="@+id/result_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/assess_result_tip"
            android:textColor="@color/usu"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <ListView
            android:id="@+id/result_list"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_tip"
            android:layout_above="@+id/again"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:divider="#00000000"
            android:dividerHeight="15dp"/>

        <Button
            android:id="@+id/again"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:text="@string/again_assess"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/round_button"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_margin="15dp"/>

        <Button
            android:id="@+id/back"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/back"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/round_button"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_margin="15dp" />
    </RelativeLayout>
</RelativeLayout>