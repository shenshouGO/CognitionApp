<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/train_unit"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/train_platform"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/assessReporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/assess_report"
            android:drawableBottom="@drawable/unit_arrow"
            android:text="@string/assessReporter"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="25sp"
            android:background="@color/green"/>

        <TextView
            android:id="@+id/gameUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/game_unit"
            android:drawableBottom="@drawable/unit_arrow"
            android:text="@string/gameUnit"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="25sp"
            android:background="@color/green"/>

        <TextView
            android:id="@+id/pictureStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/picture_story"
            android:drawableBottom="@drawable/unit_arrow"
            android:text="@string/pictureStory"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="25sp"
            android:background="@color/green"/>

        <TextView
            android:id="@+id/describeScene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/describe_scene"
            android:drawableBottom="@drawable/unit_arrow"
            android:text="@string/describeScene"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="25sp"
            android:background="@color/green"/>
    </GridLayout>
</RelativeLayout>