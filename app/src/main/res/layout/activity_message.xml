<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/head"
        android:background="@color/white"
        android:gravity="left">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow"
            android:scaleType="center"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message"
            android:textColor="@color/usu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rg_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/head"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rb_good"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/disgood"
            android:text="@string/good_and_score" />

        <TextView
            android:id="@+id/rb_focus"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/collect"
            android:text="@string/add_focus" />

        <TextView
            android:id="@+id/rb_comment"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/comment"
            android:text="@string/comment" />
    </LinearLayout>
</RelativeLayout>