<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/head"
        android:background="@color/white"
        android:gravity="left">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow"
            android:scaleType="center"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认知重评"
            android:textColor="@color/usu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/send"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/search"
            android:scaleType="center"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resource"
        android:layout_below="@+id/head"
        android:gravity="center">
        <ImageView
            android:id="@+id/pic"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_margin="8dp"/>
    </RelativeLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cognition"
        android:layout_below="@+id/resource"
        android:layout_above="@+id/function"
        android:hint="请输入内容..."
        android:gravity="start"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="标注"
            android:textSize="20sp"
            android:drawableTop="@drawable/name"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/words"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="文本"
            android:textSize="20sp"
            android:drawableTop="@drawable/cognition"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/mosaic"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="马赛克"
            android:textSize="20sp"
            android:drawableTop="@drawable/mosaic"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/draw"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="涂鸦"
            android:textSize="20sp"
            android:drawableTop="@drawable/draw"
            android:gravity="center_horizontal" />
    </LinearLayout>
</RelativeLayout>